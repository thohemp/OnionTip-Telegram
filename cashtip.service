[Unit]
Description=oniontipBot
After=syslog.target
After=network.target
After=bitcoind.service

[Service]
Type=simple
ExecStart=/bitcoin/oniontip-telegram/oniontip.py
WorkingDirectory=/bitcoin/oniontip-telegram/
Restart=always
RestartSec=600

[Install]
WantedBy=multi-user.target
